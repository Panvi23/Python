path = input("Which path you wanna choose left or right")
if(path == "right"):
    print("You chose the wrong path GAME OVER!!!")
elif(path == "left"):
    action = input("Choose whether you wanna swim or wait")
    if(action == "swim"):
        print("You are drowned due to heave flow of water GAME OVER!!!")
    elif(action == "wait"):
        door = input("Choose red or blue or yellow colour door")
        if(door == "red"):
            print("You have fallen down from the cliff GAME OVER!!!")
        elif(door == "blue"):
            print("You are trapped in a dark room GAME OVER!!!")
        elif(door == "yellow"):
            print("Heyyyy!!!!! YOU WON THE EPIC SWORD")
